<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.convoenglishllc.expression.activity.SplashActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.convoenglishllc.expression.activity.SplashActivity"
        tools:showIn="@layout/activity_splash"
        android:background="@color/darkBlue">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <com.convoenglishllc.expression.component.AutoResizeTextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="150sp"
                    android:textColor="#ffffff"
                    android:text="Practice Speaking"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:indeterminate="false"
                    app:mpb_progressStyle="horizontal"
                    style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />
                <LinearLayout
                    android:id="@+id/control_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_size_medium"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="@color/mediumBlue"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleDuration="350"
                        app:mrl_rippleFadeDuration="75"
                        app:mrl_rippleBackground="@color/darkBlue"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:id="@+id/watch_video"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_header2"
                            android:textColor="#FFFFFF"
                            android:text = "Watch Video"
                            android:background="@drawable/layout_border"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_size_medium"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="@color/mediumBlue"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleDuration="350"
                        app:mrl_rippleFadeDuration="75"
                        app:mrl_rippleBackground="@color/darkBlue"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:id="@+id/skip_video"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_header2"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:text = "Skip Video"
                            android:background="@drawable/layout_border"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo"/>
            </LinearLayout>
            <Space
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <com.convoenglishllc.expression.component.AutoResizeTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textSize="350sp"
                    android:textColor="#ffffff"
                    android:text="English Conversation"/>
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
